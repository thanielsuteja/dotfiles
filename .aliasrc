# FUNCTIONS -- {{{

function mkcd() {
  mkdir -p "$@" && cd "$_";
}

function sal() {
  source $HOME/.aliasrc
}

## open your note
function n() {
    (cd $HOME/Vault && nvim ${1:-'.'})
}
alias todo="n ii/TODO.md"

function nv() {
    (cd ~/.config/nvim && nvim ${1:-'.'})
}

function cdh() {
    cd ~/$1
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

